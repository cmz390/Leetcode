public class Solution {
    public int countBattleships(char[][] board) {
        int i,j,result;
        result=0;
        for(i=0;i<board.length;i++)
            for(j=0;j<board[0].length; j++)
                {
                    if(board[i][j]=='X')
                        {if(i==0||board[i-1][j]=='.') result++;
                        if(j==0||board[i][j-1]=='.') result++;
                        result--;}
                        //if(i==0&&j==0) result--;}
    
                }
    
        return result;
    }
}